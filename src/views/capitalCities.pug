extends layout.pug

block head
  link(rel="stylesheet", href="/cities.css")

block content
  h2 Capital Cities 
  //- Create a table for the data set
  table
    thead
      th â„–
      th Name
      th Country
      th Population 
      th Options
      
    tbody
      each row, i in rows
        tr
          td.fit #{i+1}
          td.fit #{row.Name}
          td.fit #{row.Country}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}
          td.fit
            button.btn.btn-info
              i.fa.fa-pencil-square-o(aria-hidden="true")
            button.btn.btn-danger
              i.fa.fa-trash(aria-hidden="true")