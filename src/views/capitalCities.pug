extends layout.pug

block head
  link(rel="stylesheet", href="/cities.css")

block content
  h2 Capital Cities 
  table
    thead
      th â„–
      th Name
      th Country
      th Population 
      th Options
      
    tbody
      each row, i in rows
        tr
          td.fit #{i+1}
          td.fit #{row.Name}
          td.fit #{row.Country}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}
          td
            button(class="button")
              i.fa.fa-pencil-square-o(aria-hidden="true")
                a(href=`/cities/${i + 1}`) #{i + 1} 
            button(class="button")
              i.fa.fa-pencil-trash(aria-hidden="true")