extends layout.pug

block head
  link(rel="stylesheet", href="/cities.css")

block content
  h2 Capital Cities 
  table
    thead
      th Name
      th Capital City 
      th Continent
      th Region
      
    tbody
      each row, i in rows
        tr
          td.fit #{row.Name}
          td.fit #{row.Capital}
          td #{row.Continent}
          td.fit #{row.Region}
          